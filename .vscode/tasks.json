{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "E:\\work\\tools\\msys64\\mingw64\\bin\\g++.exe",   //改成自己的路径
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",   //new 每个进程创建新窗口
                "showReuseMessage": false,   
                "clear": false
            },
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-fexec-charset=gbk",   //这行解决中文乱码问题
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
